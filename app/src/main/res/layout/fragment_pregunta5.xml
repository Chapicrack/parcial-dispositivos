<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pregunta5"
    android:background="@color/negro_no"
    >


    <ImageView
        android:id="@+id/imageView51"
        android:layout_width="362dp"
        android:layout_height="280dp"
        android:src="@drawable/kindred"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Quién representa la muerte en runaterra?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView51"
        android:textColor="@color/contraste"
        android:layout_margin="20dp"
        android:textSize="22sp"
        android:padding="12sp"
        />

    <Button
        android:id="@+id/button53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a)Kindred"
        app:layout_constraintBottom_toTopOf="@+id/button54"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp"
        android:textSize="17sp"
        android:backgroundTint="@color/text_res"
        android:textColor="@color/fondo_res"
        />

    <Button
        android:id="@+id/button54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="b)El vacío"
        app:layout_constraintBottom_toTopOf="@+id/button55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp"
        android:textSize="17sp"
        android:backgroundTint="@color/text_res"
        android:textColor="@color/fondo_res"
        />

    <Button
        android:id="@+id/button55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="c)La Muerte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="70dp"
        android:textSize="17sp"
        android:backgroundTint="@color/text_res"
        android:textColor="@color/fondo_res"
        />

</androidx.constraintlayout.widget.ConstraintLayout>